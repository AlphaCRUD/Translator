<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    tools:context=".TextTranslator">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bar_bg_straight">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_white" />

            <TextView
                android:id="@+id/txtTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/btnBack"
                android:fontFamily="@font/quicksandsemibold"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="Text Translator"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <ImageButton
                android:id="@+id/btnshare"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_share_24" />

        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/languageCard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/current"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/currentLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/quicksandregular"
                        android:text="English"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/currentLanguage"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24"
                        app:tint="@color/white" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/translation"
                    android:tint="@color/white" />

                <RelativeLayout
                    android:id="@+id/target"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/targetLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/quicksandregular"
                        android:text="Spanish"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/targetLanguage"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24"
                        app:tint="@color/white" />


                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/translationCard"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/languageCard"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="#FFF"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/currentLanguageT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F6F6F6"
                        android:fontFamily="@font/quicksandregular"
                        android:paddingStart="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="English"
                        android:textColor="@color/mainColor"
                        android:textSize="16dp" />


                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/btnTranslate"
                        android:layout_below="@id/currentLanguageT"
                        android:background="@null"
                        android:gravity="start"
                        android:maxLines="1"
                        android:inputType="textShortMessage"
                        android:hint="Start Typing Here..."
                        android:padding="10dp"
                        android:textColor="@color/black" />


                    <Button
                        android:id="@id/btnTranslate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/purple_200"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Translate"
                        android:textColor="@color/white" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/targetLanguageT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F6F6F6"
                        android:fontFamily="@font/quicksandregular"
                        android:paddingStart="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Spanish"
                        android:textColor="@color/mainColor"
                        android:textSize="16dp" />


                    <EditText
                        android:id="@+id/editTarget"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/targetLanguageT"
                        android:background="#FFF"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:hint="Results"
                        android:padding="10dp" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/rlTT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/translationCard"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/purple_200">

            <ImageView
                android:id="@+id/ivTT"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tvTT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@id/ivTT"
                android:fontFamily="@font/quicksandregular"
                android:text="Photo Translator"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tvTT"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvOpenPT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_white"
                    android:fontFamily="@font/quicksandregular"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="Open"
                    android:textColor="@color/gnt_blue"
                    android:textSize="16dp" />


            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/nativeAd"
            android:layout_width="match_parent"
            android:layout_below="@id/rlTT"
            android:layout_height="wrap_content"/>


    </RelativeLayout>





</ScrollView>