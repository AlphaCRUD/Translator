<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rlprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/mainColor"
            android:progressTint="@color/mainColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Detecting Text"
            android:textColor="@color/white" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_white" />

            <ImageButton
                android:id="@+id/btnflash"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:elevation="2dp"
                android:padding="10dp" />

            <TextView
                android:id="@+id/txtTop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btnBack"
                android:fontFamily="@font/quicksandsemibold"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="Camera"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aa"
            android:layout_above="@id/abb"
            android:layout_alignParentTop="true">


            <ImageView
                android:id="@+id/setImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1dp"
                android:src="@color/mainColor"
                android:visibility="invisible" />

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Preview Area"
                android:importantForAccessibility="no" />

            <RelativeLayout
                android:id="@+id/rlcontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1dp"
                android:fitsSystemWindows="true"
                android:layoutDirection="ltr"
                android:visibility="invisible">

                <View
                    android:id="@+id/linearss"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_below="@+id/viewone"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toStartOf="@+id/viewfours"
                    android:layout_toEndOf="@+id/viewthreee"
                    android:elevation="3dp"
                    android:orientation="vertical" />


                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/viewone"
                    android:layout_toEndOf="@+id/viewthreee"
                    android:elevation="1dp"
                    android:layoutDirection="ltr"
                    android:src="@drawable/left_scaner" />

                <ImageView
                    android:id="@+id/iv2"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/viewone"
                    android:layout_toStartOf="@+id/viewfours"
                    android:elevation="1dp"

                    android:layoutDirection="ltr"
                    android:src="@drawable/right_scaner" />

                <ImageView
                    android:id="@+id/iv3"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/viewtwos"
                    android:layout_toStartOf="@+id/viewfours"
                    android:elevation="1dp"

                    android:layoutDirection="ltr"
                    android:src="@drawable/bottom_right" />

                <ImageView
                    android:id="@+id/iv4"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/viewtwos"
                    android:layout_toEndOf="@+id/viewthreee"
                    android:elevation="1dp"
                    android:layoutDirection="ltr"
                    android:src="@drawable/bottom_left" />

                <View
                    android:id="@+id/viewone"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:alpha="0.5"
                    android:background="#000000"

                    android:elevation="1dp"
                    android:minHeight="100dp" />

                <View
                    android:id="@+id/vc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewone"
                    android:layout_alignBottom="@+id/linearss"
                    android:layout_marginBottom="0dp"
                    android:elevation="1dp"
                    android:importantForContentCapture="yes" />

                <View
                    android:id="@+id/viewtwos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearss"
                    android:alpha="0.5"
                    android:background="#000000"
                    android:elevation="1dp" />

                <View
                    android:id="@+id/viewthreee"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/viewtwos"
                    android:layout_below="@id/viewone"
                    android:alpha="0.5"
                    android:background="#000000"
                    android:elevation="1dp" />

                <View
                    android:id="@+id/viewfours"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/viewtwos"
                    android:layout_below="@id/viewone"
                    android:layout_alignParentEnd="true"
                    android:alpha="0.5"
                    android:background="#000000"
                    android:elevation="1dp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rlCam"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/rlCam"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/brightin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/brightnesslow"
                        app:tint="@color/colorWhite" />

                    <SeekBar
                        android:id="@+id/seekBar2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EDEBEB"
                        android:focusableInTouchMode="true"
                        android:indeterminate="false"
                        android:max="12"
                        android:padding="0dp"
                        android:progress="6"
                        android:progressBackgroundTint="#1B1515"
                        android:progressTint="@color/mainColor"
                        android:thumb="@drawable/circle" />

                    <ImageView
                        android:id="@+id/brighout"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/sun"
                        app:tint="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/zoomout"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_baseline_zoom_out_24"
                        app:tint="@color/white" />

                    <SeekBar
                        android:id="@+id/seekBar1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EDEBEB"
                        android:focusableInTouchMode="true"
                        android:indeterminate="false"
                        android:max="6"
                        android:padding="0dp"
                        android:progress="0"

                        android:progressBackgroundTint="@color/mainColor2"
                        android:progressTint="@color/mainColor"
                        android:thumb="@drawable/circle" />

                    <ImageView
                        android:id="@+id/zoomin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_baseline_zoom_in_24"
                        app:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <!--            <LinearLayout-->
            <!--                android:id="@+id/surface"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:background="#00000000"-->
            <!--                android:visibility="invisible"-->
            <!--                android:orientation="vertical" />-->
            <LinearLayout
                android:id="@+id/rlCam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="1"

                >

                <ImageView
                    android:id="@+id/btn_takepicture"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/white_drawable"
                    android:padding="5dp"
                    android:src="@drawable/camera_lens"
                    app:tint="@color/mainColor" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:id="@+id/abb"
            android:alpha="0.7"
            android:orientation="vertical"
            android:background="@color/black">


            <LinearLayout
                android:id="@+id/rlIDCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                >

                <LinearLayout
                    android:id="@+id/ocr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="OCR"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imgOcr"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/oval" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/idcard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="ID Card"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imgCard"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/oval"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/nativeAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/white_rounded"
                    android:fontFamily="@font/quicksandregular"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="Add"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progressed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center" />

                <!--                <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"-->
                <!--                    android:id="@+id/adView"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_alignParentBottom="true"-->
                <!--                    android:layout_centerHorizontal="true"-->
                <!--                    ads:adSize="BANNER"-->
                <!--                    ads:adUnitId="@string/admob_banner_id"></com.google.android.gms.ads.AdView>-->
            </LinearLayout>

           </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="TakePic"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_Zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Zoom"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_brightnes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Brightness"
        android:visibility="gone" />



</RelativeLayout>